# ============================
# 1. Build stage
# ============================
FROM gradle:8.5-jdk17 AS builder
WORKDIR /app
COPY . .
RUN gradle bootJar --no-daemon

# ============================
# 2. Run stage
# ============================
FROM eclipse-temurin:17-jre
WORKDIR /app

# Copy the built jar from stage 1
COPY --from=builder /app/build/libs/*.jar app.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "app.jar"]
